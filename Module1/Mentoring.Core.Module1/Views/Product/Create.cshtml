@using Mentoring.Core.Module1.Models
@model Product

<h2>Create new product</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" />
        <span asp-validation-for="ProductName"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewData["Categories"] as IEnumerable<Category>, "CategoryId", "CategoryName"))"></select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplierId"></label>
        <select asp-for="SupplierId" asp-items="@(new SelectList(ViewData["Suppliers"] as IEnumerable<Supplier>, "SupplierId", "CompanyName"))"></select>
        <span asp-validation-for="SupplierId"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantityPerUnit"></label>
        <input asp-for="QuantityPerUnit" />
        <span asp-validation-for="QuantityPerUnit"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReorderLevel"></label>
        <input asp-for="ReorderLevel" />
        <span asp-validation-for="ReorderLevel"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" />
        <span asp-validation-for="UnitPrice"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitsInStock"></label>
        <input asp-for="UnitsInStock" />
        <span asp-validation-for="UnitsInStock"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitsOnOrder"></label>
        <input asp-for="UnitsOnOrder" />
        <span asp-validation-for="UnitsOnOrder"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discontinued"></label>
        <input asp-for="Discontinued" />
        <span asp-validation-for="Discontinued"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

